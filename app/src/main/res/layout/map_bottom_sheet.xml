<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/addressBsTextView"
            style="@style/BaseTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Невский проспект д 999"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeBsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/BaseTextStyle"
            app:layout_constraintEnd_toStartOf="@id/directionBsButton"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addressBsTextView"
            tools:text="12:30-15:50"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/priceBsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/BaseTextStyle"
            app:layout_constraintEnd_toStartOf="@id/directionBsButton"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeBsTextView"
            tools:text="12 678 ,руб"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionBsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/BaseTextStyle"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceBsTextView"
            tools:text="@string/item_info"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/directionBsButton"
            style="@style/BaseButtonStyle"
            android:layout_margin="4dp"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/ic_check"
            android:text="@string/create_directions"
            app:layout_constraintTop_toBottomOf="@id/addressBsTextView"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>