<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.my_project.deliveringgoods.ui.custom_view.CircleImage
            android:id="@+id/avatarCircleImage"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_account_profile"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorPrimaryDark"
            app:civ_fill_color="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logoutButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/logout"
            style="@style/BaseButtonStyle"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/photoButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:text="@string/do_photo_car"
            android:drawableStart="@drawable/ic_photo_camera"
            android:drawablePadding="16dp"
            style="@style/BaseButtonStyle"/>

</androidx.appcompat.widget.LinearLayoutCompat>